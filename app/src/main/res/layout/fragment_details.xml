<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.DetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_marginTop="48dp"
            app:srcCompat="@drawable/group_2085662193" />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_toRightOf="@id/img"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multivitamins for Men"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_below="@id/viewPager"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multivitamins"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:layout_below="@id/tv"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:fontFamily="@font/poppins"
            android:paddingStart="16dp"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:fontFamily="@font/poppins"
            android:layout_margin="16dp"
            android:textAlignment="gravity"
            android:text="@string/content_string"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:textAlignment="gravity"
            android:text="Total Price"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="16dp"
            android:layout_below="@id/tv4"
            android:layout_marginBottom="24dp"
            android:text="â‚¦ 1,198.00"
            android:textSize="18sp"
            android:textColor="#DC1250"
            android:textStyle="bold"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1 +"
            android:textSize="14sp"
            app:chipBackgroundColor="#EEEEEE"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/viewPager"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#FFCB45"
            android:layout_marginLeft="-73dp"
            android:layout_below="@id/chip2"
            android:padding="8dp"
            android:rating="3.5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-73dp"
            android:layout_toRightOf="@id/ratingBar"
            android:layout_below="@id/chip2"
            android:paddingTop="28dp"
            android:text="(320 reviews)"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#DC1250"
            android:text="Add to cart"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/icon__2_"
            app:iconTint="#FFFAFA" />
    </RelativeLayout>

</FrameLayout>